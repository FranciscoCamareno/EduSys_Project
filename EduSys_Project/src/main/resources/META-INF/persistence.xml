<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="EduSysPersistence" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>edusys_project.model.Student</class>
    <class>edusys_project.model.Activities</class>
    <class>edusys_project.model.Profile</class>
    <class>edusys_project.model.Course</class>
    <class>edusys_project.model.Cycle</class>
    <class>edusys_project.model.Notifications</class>
    <class>edusys_project.model.Careers</class>
    <class>edusys_project.model.StudyPlan</class>
    <class>edusys_project.model.Groups</class>
    <class>edusys_project.model.Users</class>
    <class>edusys_project.model.Module</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/edusysdb?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="AdminDB"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
